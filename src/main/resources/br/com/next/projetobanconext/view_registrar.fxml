<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.next.projetobanconext.controller.RegistrarController">
   <Label contentDisplay="RIGHT" layoutX="101.0" layoutY="24.0" text="Nome:">
      <graphic>
         <TextField fx:id="textNome" promptText="Insira seu Nome" />
      </graphic>
   </Label>
   <Label contentDisplay="RIGHT" layoutX="113.0" layoutY="57.0" text="CPF:">
      <graphic>
         <TextField fx:id="textCPF" promptText="Insira seu CPF" />
      </graphic>
   </Label>
   <Label contentDisplay="RIGHT" layoutX="25.0" layoutY="92.0" text="Data de Nascimento:">
      <graphic>
         <TextField fx:id="textNascimento" nodeOrientation="LEFT_TO_RIGHT" promptText="01/01/2001" />
      </graphic>
   </Label>
   <AnchorPane layoutX="13.0" layoutY="175.0" prefHeight="251.0" prefWidth="375.0" style="-fx-background-color: #d5d5d5;">
      <Label layoutX="14.0" layoutY="175.0" text="Bairro:" />
      <TextField fx:id="textBairro" layoutX="15.0" layoutY="194.0" promptText="Nome do Bairro" />
      <Label layoutX="16.0" layoutY="55.0" text="Logradouro:" />
      <TextField fx:id="textLogradouro" layoutX="15.0" layoutY="76.0" promptText="Nome da Rua" />
      <Label layoutX="8.0" layoutY="6.0" text="Endereço:">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="15.0" layoutY="112.0" text="Número:" />
      <TextField fx:id="textNumero" layoutX="15.0" layoutY="132.0" promptText="Número da Residência" />
      <Label layoutX="205.0" layoutY="175.0" text="CEP:" />
      <TextField fx:id="textCEP" layoutX="206.0" layoutY="194.0" promptText="Número do CEP" />
      <Label layoutX="207.0" layoutY="55.0" text="Cidade:" />
      <TextField fx:id="textCidade" layoutX="206.0" layoutY="76.0" promptText="Nome da Cidade" />
      <Label layoutX="206.0" layoutY="112.0" text="Estado:" />
      <TextField fx:id="textEstado" layoutX="206.0" layoutY="132.0" promptText="Nome do Estado" />
   </AnchorPane>
   <Label contentDisplay="RIGHT" layoutX="101.0" layoutY="126.0" text="Senha:">
      <graphic>
         <TextField fx:id="textSenha" nodeOrientation="LEFT_TO_RIGHT" promptText="Mínimo 6 caracteres" />
      </graphic>
   </Label>
   <CheckBox fx:id="cbContaCorrente" layoutX="47.0" layoutY="459.0" mnemonicParsing="false" text="Conta Corrente" />
   <CheckBox fx:id="cbContaPoupança" layoutX="47.0" layoutY="485.0" mnemonicParsing="false" text="Conta Poupança" />
   <Button fx:id="btCadastrar" layoutX="123.0" layoutY="539.0" mnemonicParsing="false" onAction="#onBtCadastrarAction" text="Cadastrar" />
   <Button fx:id="btVoltar" layoutX="232.0" layoutY="539.0" mnemonicParsing="false" text="Voltar" />
</AnchorPane>
